@using DoAnMon.Models
@model List<Giode>
@{
    ViewBag.Title = "DatDe";
    Layout = "~/Views/_LayoutPage2.cshtml";
}
<!-- contact breadcrumbs -->
<nav id="breadcrumbs" class="breadcrumbs">
    <div class="container page-wrapper text-center">
        <div class="header-section">
            <h2 cl="mb-2">Thông Tin Hàng Hóa</h2>
        </div>
        <a @Html.ActionLink("Trang Chủ Đăng Nhập", "Index", "LoginHome")</a> » <span class="breadcrumb_last" aria-current="page">Thông Tin Hàng Hóa</span>
    </div>
</nav>
<!-- !contact breadcrumbs -->
<section class="w3l-blog">
    <div class="single blog pb-5 pt-md-4 pt-2">
        <div class="container pb-lg-3">
            <div class="row">
                <!-- left side blog post content -->
                <div class="blog-posts">
                    <aside class="row">
                        <aside class="col">
                            <table align="center" border="1">
                                <tr style="text-align:center; font-weight:bold">
                                    <td> Mã Đề</td>
                                    <td> Tên Đề</td>
                                    <td> Ảnh bìa</td>
                                    <td> Số lượng</td>
                                    <td> Đơn giá</td>
                                    <td> Thành tiền</td>

                                </tr>
                                @foreach (var de in Model)
                                {
                                    <tr style="text-align:center; font-weight:bold">
                                        <td>@de.iMaDe </td>
                                        <td>@de.sTenDe </td>
                                        <td><img class="half-image" src="~/images/@de.sAnhbia" /> </td>
                                        @using (Html.BeginForm("CapNhatGiode", "Giode", new { @iMaSP = de.iMaDe }))
                                        {
                                            <td>
                                                @de.iSoLuong
                                            </td>
                                            <td>@String.Format("{0:0,0}", de.dDongia) </td>
                                            <td>@String.Format("{0:0,0}", de.dthanhtien) </td>
                                        }
                                    </tr>
                                }
                                <tr style="font-weight: bold; text-align:right; color:brown">
                                    <td colspan="3">Số lượng đề: @ViewBag.TongSL</td>
                                    <td colspan="3">Tổng tiền: @String.Format("{0:0,0}", ViewBag.TongTien) VNĐ</td>
                                </tr>
                                <tr style="font-weight: bold; text-align:right; color:coral">
                                    <td colspan="6">
                                        @Html.ActionLink("Xóa Giỏ Đề", "XoaTatCaGiode")
                                    </td>
                                </tr>
                            </table>
                        </aside>
                        <aside class="col">
                            <h2 style="text-align:center">THÔNG TIN ĐẶT HÀNG</h2>
                            @{
                                NguoiDung ND = (NguoiDung)Session["Taikhoan"];
                            }
                            <table align="center">
                                @using (Html.BeginForm())
                                {
                                    @Html.ValidationSummary(true)
                                    <tr style="height:40px">
                                        <td> Họ tên người dùng:</td>
                                        <td style="font-weight:bold">  @ND.HoTen</td>
                                    </tr>
                                    <tr style="height:40px">
                                        <td> Địện thoại:</td>
                                        <td style="font-weight:bold">  @ND.Dienthoai</td>
                                    </tr>

                                    <tr style="height:40px">
                                        <td> Ngày đặt:</td>
                                        <td style="font-weight:bold">  @DateTime.Now.ToShortDateString()</td>
                                    </tr>
                                    <tr style="height:40px">
                                        <td> Ngày giao hàng:</td>
                                        <td style="font-weight:bold">
                                            <input type="date" name="Ngaygiao" />
                                        </td>
                                    </tr>
                                    <tr style="height:40px">
                                        <td></td>
                                        <td>
                                            <input type="submit" value="ĐỒNG Ý ĐẶT HÀNG" />
                                        </td>
                                    </tr>
                                }
                            </table>

                        </aside>
                    </aside>
                </div>
            </div>
        </div>
    </div>
</section>