<style type="text/css">
    #Datmua a {
        clear: both;
        background-color: aquamarine;
        color: whitesmoke;
        width: 120px;
        height: 35px;
        display: block;
        float: right;
        text-align: center;
        padding-top: 10px;
        text-decoration: none;
        font-weight: bold;
    }

        #Datmua a:hover {
            background-color: gray;
            color: burlywood;
        }
</style>

@{
    ViewBag.Title = "ChiTietDe";
    Layout = "~/Views/_LayoutPage2.cshtml";
}

<h2>THÔNG TIN ĐỀ</h2>
<div>
    <div style="width:40%; float:left; border-left: dotted 1px; border-color:azure">
        <img src="~/img/@Model.Anhbia" width="100%" />
    </div>
    <div style="width:60%; float:left; padding:10px">
        <h4 style="font-weight: bold; color:orangered">Tên đề: @Model.TenDe</h4>
        <p style="text-align:justify"><span style="font-weight:bold">Thông tin: </span>@Model.ThôngTin</p>
        <p style="font-weight:bold">Giá bán:<span style="color:red;font-size:16pt">@Model.Giaban VNĐ</span></p>
    </div>
    <div>
        <div id="Datmua">
            <a href="@Url.Action("themGiode", "GioDe", new {@iMaDe = Model.MaDe, @stURL = Request.Url.ToString() })" class="list-group-item">
                Đặt mua
            </a>
        </div>
    </div>
</div>
